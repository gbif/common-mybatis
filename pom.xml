<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.gbif</groupId>
    <artifactId>motherpom</artifactId>
    <version>19</version>
  </parent>

  <groupId>org.gbif</groupId>
  <artifactId>gbif-common-mybatis</artifactId>
  <version>0.15-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>GBIF Common :: MyBatis</name>
  <description>Utilities for common MyBatis persistence layers</description>

  <scm>
    <connection>scm:git:git@github.com:gbif/common-mybatis.git</connection>
    <url>https://github.com/gbif/common-mybatis</url>
    <developerConnection>scm:git:git@github.com:gbif/common-mybatis.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <!-- requires java6! -->
    <findbugs-jsr305.version>3.0.0</findbugs-jsr305.version>
    <gbif-api.version>0.19</gbif-api.version>
    <gbif-parsers.version>0.11</gbif-parsers.version>
    <guava.version>17.0</guava.version>
    <guice.version>3.0</guice.version>
    <h2.version>1.4.185</h2.version>
    <hamcrest.version>1.3</hamcrest.version>
    <hikaricp.version>2.3.6</hikaricp.version>
    <junit.version>4.12</junit.version>
    <mockito.version>1.9.5</mockito.version>
    <mybatis.version>3.2.8</mybatis.version>
    <mybatis-guice.version>3.6</mybatis-guice.version>
    <mybatis-ehcache.version>1.0.0</mybatis-ehcache.version>
    <slf4j-api.version>1.7.10</slf4j-api.version>
  </properties>

  <repositories>
    <repository>
      <id>gbif-all</id>
      <url>http://repository.gbif.org/content/groups/gbif</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${findbugs-jsr305.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <version>${guice.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.inject.extensions</groupId>
      <artifactId>guice-multibindings</artifactId>
      <version>${guice.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.gbif</groupId>
      <artifactId>gbif-api</artifactId>
      <version>${gbif-api.version}</version>
    </dependency>
    <dependency>
      <groupId>org.gbif</groupId>
      <artifactId>gbif-parsers</artifactId>
      <version>${gbif-parsers.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mybatis</groupId>
      <artifactId>mybatis</artifactId>
      <version>${mybatis.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mybatis</groupId>
      <artifactId>mybatis-guice</artifactId>
      <version>${mybatis-guice.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mybatis</groupId>
      <artifactId>mybatis-ehcache</artifactId>
      <version>${mybatis-ehcache.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j-api.version}</version>
    </dependency>
    <dependency>
      <groupId>com.zaxxer</groupId>
      <artifactId>HikariCP-java6</artifactId>
      <version>${hikaricp.version}</version>
    </dependency>

    <!-- Test -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>${hamcrest.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>${mockito.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>${h2.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
